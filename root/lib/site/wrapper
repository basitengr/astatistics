		<!-- Ajax example to use it as template -->
		<script type="text/javascript">
			//<![CDATA[
				jQuery(function($) {
					// #convenient is a <p id="convenient"> block
					$("#convenient")
						.css({cursor:"pointer"})
						.click(function(){
									 $.ajax({
													 type: "GET"
													,url: "[% c.uri_for("ajax") %]"
													,dataType: "json"
													,cache: false
													,success: function(json){
																			 var $pq = $("<span>" + json.quote + "</span>");
																			 // quote (json.quote) is got from a Controller:
																			 //		my $quote = ...;
																			 //		$c->stash->(quote => $quote);
																			 //		$c->detach->( $c->view("JSON") );
																			 $pq.hide();
																			 // .reuseable is a <div class="reuseable"> 
																			 if ( $(".reuseable").children().size() > 0 )
																							$(".reuseable").append(" &middot; ");
																			 $(".reuseable").append($pq);
																			 $pq.fadeIn();
																		}
													 });
						 });
				});
			//]]>
		</script>
		[% END %]
